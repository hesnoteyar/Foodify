<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1C1B1B"
    tools:context=".PayMethod">

    <ImageView
        android:id="@+id/backbutton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/backbutton"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        />


    <TextView
        android:id="@+id/pay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Payment Method"
        android:textColor="@color/white"
        android:fontFamily="@font/opensansveriable"
        android:textSize="40dp"
        android:textStyle="bold"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="20dp"/>

    <RadioGroup
        android:id="@+id/rdgrppayment"
        android:layout_marginTop="170dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cash"
            android:layout_marginLeft="15dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:fontFamily="@font/opensansveriable"
            android:textSize="30dp"/>

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/cod"/>

        <RadioButton
            android:id="@+id/Cashrdbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/white"
            android:layout_marginLeft="35dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:text="Points"
            android:textColor="@color/white"
            android:fontFamily="@font/opensansveriable"
            android:textStyle="bold"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="7dp"/>

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/points"/>

        <RadioButton
            android:id="@+id/Pointsrdbtn"
            android:layout_marginLeft="35dp"
            android:buttonTint="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>




    </RadioGroup>

    <Button
        android:id="@+id/confirm"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:text="Confirm"
        android:layout_below="@+id/pay"
        android:fontFamily="@font/opensansveriable"
        android:backgroundTint="#57B65F"
        android:background="@drawable/roundstyle_field"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:layout_marginTop="500dp"/>


</RelativeLayout>