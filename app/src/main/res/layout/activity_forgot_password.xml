<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#1C1B1B"
    android:layout_height="match_parent"
    tools:context=".ForgotPassword">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@mipmap/app_icon"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/forgot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot Password?"
        android:textColor="@color/white"
        android:fontFamily="@font/opensansveriable"
        android:layout_below="@+id/logo"
        android:layout_centerHorizontal="true"
        android:textSize="30dp"/>

    <TextView
        android:id="@+id/dontworry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Don't worry! Enter your registered email below \nto receive password reset instructions"
        android:layout_below="@+id/forgot"
        android:textColor="@color/white"
        android:gravity="center"
        android:fontFamily="@font/opensansveriable"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

    <ImageView
        android:id="@+id/email"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:src="@drawable/forgot_password"
        android:layout_below="@+id/dontworry"
        android:layout_centerHorizontal="true"/>

    <com.google.android.material.textfield.TextInputLayout

        android:layout_marginBottom="10sp"
        android:id="@+id/TE1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="@color/white"
        android:layout_below="@+id/email"
        app:hintTextColor="#57B65F"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:boxStrokeWidth="0dp"
        app:boxBackgroundMode="outline"
        android:hint="Email Address"
        app:boxStrokeWidthFocused="0dp"
        app:boxStrokeColor="#000000"
        app:passwordToggleTint="@color/white">

        <com.google.android.material.textfield.TextInputEditText
            android:fontFamily="@font/opensansveriable"
            android:background="@drawable/input_background"
            android:id="@+id/emailforgot"
            android:paddingStart="20dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:autofillHints=""
            android:textSize="15sp"
            android:textColorHint="@color/white"
            android:inputType="text"
            android:textColor="@color/white"
            android:textColorHighlight="@color/white"/>
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/send_btn"
        android:background="@drawable/roundstyle_field"
        android:layout_width="220dp"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:text="SEND"
        android:layout_below="@+id/TE1"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/opensansveriable"
        android:layout_marginBottom="60dp"
        android:backgroundTint="#57B65F"
        android:textColor="@color/white"/>

    <ImageView
        android:id="@+id/back"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/backbutton"
        android:layout_toLeftOf="@+id/logo"
        android:layout_marginRight="40dp"
        android:layout_marginTop="20dp"/>
</RelativeLayout>