<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1C1B1B"
    tools:context=".EditProfile">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="30dp"
                android:text="Profile"
                android:textColor="@color/white"
                android:textSize="44dp" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_pfp"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/default_pfp"
                app:civ_border_color="#808080"
                app:civ_border_width="2dp"
                android:layout_marginLeft="150dp"/>

            <TextView
                android:id="@+id/save_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save Profile"
                android:textColor="#57B65F"
                android:fontFamily="@font/opensansveriable"
                android:textSize="23dp"
                android:layout_marginLeft="155dp"
                android:layout_marginTop="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:layout_marginLeft="20dp"
                android:textColor="#808080"
                android:textSize="17dp"
                android:fontFamily="@font/opensansveriable"
                android:layout_marginTop="15dp"
                />

            <EditText
                android:id="@+id/edit_email"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:paddingStart="10dp"
                android:background="@drawable/input_background2"
                android:layout_marginRight="20dp"
                android:text="null"
                android:layout_marginLeft="20dp"
                android:textColor="@color/white"
                android:textSize="17dp"
                android:fontFamily="@font/opensansveriable"
                android:layout_marginTop="10dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Username"
                android:layout_marginLeft="20dp"
                android:textColor="#808080"
                android:textSize="17dp"
                android:fontFamily="@font/opensansveriable"
                android:layout_marginTop="20dp"
                />
            <EditText
                android:id="@+id/edit_uname"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:paddingStart="10dp"
                android:background="@drawable/input_background2"
                android:layout_marginRight="20dp"
                android:text="null"
                android:layout_marginLeft="20dp"
                android:textColor="@color/white"
                android:textSize="17dp"
                android:fontFamily="@font/opensansveriable"
                android:layout_marginTop="10dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="House Number"
                android:layout_marginLeft="20dp"
                android:textColor="#808080"
                android:textSize="17dp"
                android:fontFamily="@font/opensansveriable"
                android:layout_marginTop="20dp"
                />

            <EditText
                android:id="@+id/edit_house"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:paddingStart="10dp"
                android:background="@drawable/input_background2"
                android:layout_marginRight="20dp"
                android:text="null"
                android:layout_marginLeft="20dp"
                android:textColor="@color/white"
                android:textSize="17dp"
                android:fontFamily="@font/opensansveriable"
                android:layout_marginTop="10dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Barangay, City"
                android:layout_marginLeft="20dp"
                android:textColor="#808080"
                android:textSize="17dp"
                android:fontFamily="@font/opensansveriable"
                android:layout_marginTop="20dp"
                />

            <EditText
                android:id="@+id/edit_barangay"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:paddingStart="10dp"
                android:background="@drawable/input_background2"
                android:layout_marginRight="20dp"
                android:text="null"
                android:layout_marginLeft="20dp"
                android:textColor="@color/white"
                android:textSize="17dp"
                android:fontFamily="@font/opensansveriable"
                android:layout_marginTop="10dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Region, Province"
                android:layout_marginLeft="20dp"
                android:textColor="#808080"
                android:textSize="17dp"
                android:fontFamily="@font/opensansveriable"
                android:layout_marginTop="20dp"
                />

            <EditText
                android:id="@+id/edit_region"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:paddingStart="10dp"
                android:background="@drawable/input_background2"
                android:layout_marginRight="20dp"
                android:text="null"
                android:layout_marginLeft="20dp"
                android:textColor="@color/white"
                android:textSize="17dp"
                android:fontFamily="@font/opensansveriable"
                android:layout_marginTop="10dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Age"
                android:layout_marginLeft="20dp"
                android:textColor="#808080"
                android:textSize="17dp"
                android:fontFamily="@font/opensansveriable"
                android:layout_marginTop="20dp"
                />
            <EditText
                android:id="@+id/edit_age"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:paddingStart="10dp"
                android:background="@drawable/input_background2"
                android:layout_marginRight="20dp"
                android:text="null"
                android:inputType="number"
                android:layout_marginLeft="20dp"
                android:textColor="@color/white"
                android:textSize="17dp"
                android:fontFamily="@font/opensansveriable"
                android:layout_marginTop="10dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Weight"
                android:layout_marginLeft="20dp"
                android:textColor="#808080"
                android:textSize="17dp"
                android:fontFamily="@font/opensansveriable"
                android:layout_marginTop="20dp"
                />
            <EditText
                android:id="@+id/edit_weight"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:inputType="number"
                android:paddingStart="10dp"
                android:background="@drawable/input_background2"
                android:layout_marginRight="20dp"
                android:text="null"
                android:layout_marginLeft="20dp"
                android:textColor="@color/white"
                android:textSize="17dp"
                android:fontFamily="@font/opensansveriable"
                android:layout_marginTop="10dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Height"
                android:layout_marginLeft="20dp"
                android:textColor="#808080"
                android:textSize="17dp"
                android:fontFamily="@font/opensansveriable"
                android:layout_marginTop="20dp"
                />
            <EditText
                android:id="@+id/edit_height"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:inputType="number"
                android:paddingStart="10dp"
                android:background="@drawable/input_background2"
                android:layout_marginRight="20dp"
                android:text="null"
                android:layout_marginLeft="20dp"
                android:textColor="@color/white"
                android:textSize="17dp"
                android:fontFamily="@font/opensansveriable"
                android:layout_marginTop="10dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contact No."
                android:layout_marginLeft="20dp"
                android:textColor="#808080"
                android:textSize="17dp"
                android:fontFamily="@font/opensansveriable"
                android:layout_marginTop="20dp"
                />

            <EditText
                android:id="@+id/edit_number"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:paddingStart="10dp"
                android:inputType="number"
                android:background="@drawable/input_background2"
                android:layout_marginRight="20dp"
                android:text="null"
                android:layout_marginLeft="20dp"
                android:textColor="@color/white"
                android:textSize="17dp"
                android:fontFamily="@font/opensansveriable"
                android:layout_marginTop="10dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="First Name"
                android:layout_marginLeft="20dp"
                android:textColor="#808080"
                android:textSize="17dp"
                android:fontFamily="@font/opensansveriable"
                android:layout_marginTop="20dp"
                />

            <EditText
                android:id="@+id/edit_fname"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:paddingStart="10dp"
                android:background="@drawable/input_background2"
                android:layout_marginRight="20dp"
                android:text="null"
                android:layout_marginLeft="20dp"
                android:textColor="@color/white"
                android:textSize="17dp"
                android:fontFamily="@font/opensansveriable"
                android:layout_marginTop="10dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Middle Name"
                android:layout_marginLeft="20dp"
                android:textColor="#808080"
                android:textSize="17dp"
                android:fontFamily="@font/opensansveriable"
                android:layout_marginTop="20dp"
                />

            <EditText
                android:id="@+id/edit_mname"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:paddingStart="10dp"
                android:background="@drawable/input_background2"
                android:layout_marginRight="20dp"
                android:text="null"
                android:layout_marginLeft="20dp"
                android:textColor="@color/white"
                android:textSize="17dp"
                android:fontFamily="@font/opensansveriable"
                android:layout_marginTop="10dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Last Name"
                android:layout_marginLeft="20dp"
                android:textColor="#808080"
                android:textSize="17dp"
                android:fontFamily="@font/opensansveriable"
                android:layout_marginTop="20dp"
                />

            <EditText
                android:id="@+id/edit_lname"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:paddingStart="10dp"
                android:background="@drawable/input_background2"
                android:layout_marginRight="20dp"
                android:text="null"
                android:layout_marginLeft="20dp"
                android:textColor="@color/white"
                android:textSize="17dp"
                android:fontFamily="@font/opensansveriable"
                android:layout_marginTop="10dp"
                />
        </LinearLayout>


    </ScrollView>

</RelativeLayout>