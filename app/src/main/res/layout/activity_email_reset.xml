<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#1C1B1B"
    android:layout_height="match_parent"
    tools:context=".EmailReset">


    <ImageView
        android:id="@+id/logo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@mipmap/app_icon"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/forgot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email Sent!"
        android:textColor="@color/white"
        android:fontFamily="@font/opensansveriable"
        android:layout_below="@+id/logo"
        android:layout_centerHorizontal="true"
        android:textSize="30dp"/>

    <TextView
        android:id="@+id/sent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="We've sent a password reset link to"
        android:layout_below="@+id/forgot"
        android:textColor="@color/white"
        android:gravity="center"
        android:fontFamily="@font/opensansveriable"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/emaildisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="null"
        android:layout_below="@+id/sent"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:gravity="center"
        android:fontFamily="@font/opensansveriable"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"/>

    <ImageView
        android:id="@+id/emailsent"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:src="@drawable/emailsent"
        android:layout_below="@+id/emaildisplay"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/didntreceive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Didn't Receive?"
        android:textColor="@color/white"
        android:fontFamily="@font/opensansveriable"
        android:layout_below="@+id/emailsent"
        android:layout_marginLeft="130dp"/>

    <TextView
        android:id="@+id/resend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/didntreceive"
        android:text="Resend"
        android:textColor="#57B55F"
        android:textStyle="bold"
        android:fontFamily="@font/opensansveriable"
        android:layout_below="@+id/emailsent"
        android:paddingLeft="5dp"/>

    <Button
        android:id="@+id/back2login"
        android:background="@drawable/roundstyle_field"
        android:layout_width="220dp"
        android:layout_marginTop="30dp"
        android:layout_height="wrap_content"
        android:text="BACK TO LOGIN"
        android:layout_below="@+id/didntreceive"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/opensansveriable"
        android:layout_marginBottom="60dp"
        android:backgroundTint="#57B65F"
        android:textColor="@color/white" />

    <ImageView
        android:id="@+id/back"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/backbutton"
        android:layout_toLeftOf="@+id/logo"
        android:layout_marginRight="40dp"
        android:layout_marginTop="20dp"/>
</RelativeLayout>